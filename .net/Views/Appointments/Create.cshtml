@model clinic_Manage.Models.Appointment

@{

    ViewData["Title"] = "Create";
    ViewData["BodyClass"] = "appointment-create-page";

}

<style>

    .form-group

     {
         margin-bottom: 15px;
     }

     .form-control {
         border-radius: 5px;
         border: 1px solid #ccc;
         padding: 10px;
         background-color: #f8f9fa;
     }

         .form-control:focus {
             border-color: #007bff;
             box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
         }


     label {
         font-weight: bold;
         color: #333;
         text-align: left;
         display: block;
     }



     .text-center {
         text-align: center;
     }

     .text-danger {
         color: #dc3545;
     }

     .mt-3 {
         margin-top: 1rem;
     }
</style>
<h1>Schedule Appointment</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="AppointmentDate" class="control-label">Date</label>
                        <input asp-for="AppointmentDate" class="form-control" placeholder="MM/DD/YYYY" />
                        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ReasonForVisit" class="control-label">Reason For Visit</label>
                        <input asp-for="ReasonForVisit" class="form-control" />
                        <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control">
                            <option value="Scheduled">Scheduled</option>
                            <option value="Completed">Completed</option>
                            <option value="Cancelled">Cancelled</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PatientId" class="control-label">Patient Name</label>
                        <select asp-for="PatientId" asp-items="@(ViewBag.PatientSelectList)" class="form-control"></select>
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DoctorId" class="control-label">Doctor Name</label>
                        <select asp-for="DoctorId" asp-items="@(ViewBag.DoctorSelectList)" class="form-control"></select>
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Cost" class="control-label"></label>
                        <input asp-for="Cost" class="form-control" />
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Schedule" class="btn btn-primary btn-block" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
